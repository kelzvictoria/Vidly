@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>MembershipType : @Model.MembershipType.Name</li>
    @if (Model.BirthDay.HasValue)
    {
        <li>Birthdate : @Model.BirthDay.Value.ToShortDateString()</li>
    }
    
</ul>



